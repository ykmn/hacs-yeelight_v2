# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{ini,py,rst,js,html,css}]
max_line_length = 120

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
